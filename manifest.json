{
    "manifest_version": 3,
    "name": "Text Summarizer",
    "version": "1.0",
    "description": "A browser extension to summarize text using TextRazor API",
    "permissions": [
        "activeTab"
    ],
    "action": {
      "default_popup": "popup.html",
      "default_icon": {
        "16": "icon.png",
        "48": "icon.png",
        "128": "icon.png"
      }
    },
    "icons": {
      "16": "icon.png",
      "48": "icon.png",
      "128": "icon.png"
    },
    "background": {
      "service_worker": "background.js"
    },
    "content_security_policy": {
      "extension_pages": "script-src 'self'; object-src 'self'"
    },
    "web_accessible_resources": [{
      "resources": ["popup.html"],
      "matches": ["<all_urls>"]
    }]
  }
  